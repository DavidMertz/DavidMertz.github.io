#!/bin/bash

if [[ $1 == *.md ]]; then
    glow -t "$1"
elif [[ $1 == *.pdf ]]; then
    xdg-open "$1"
elif [[ $1 == *.zip ]]; then
    unzip -l "$1" | command less
elif [[ $1 == *.csv ]]; then
    csvlens "$1"
elif [[ $1 == *.tsv ]]; then
    csvlens -t "$1"
elif [[ $1 == *.png ]]; then
    TERM=xterm-kitty viu "$1"
elif [[ $1 == *.jpg ]]; then
    TERM=xterm-kitty viu "$1"
elif [[ $1 == *.html ]]; then
    lynx "$1"
elif [[ $1 == *.htm ]]; then
    lynx "$1"
elif [[ $1 == *.xlsx ]]; then
    in2csv $1 | csvlens --
elif [[ $1 == *.xls ]]; then
    in2csv $1 | csvlens --
elif [[ $1 == *.png ]]; then
    xdg-open "$1"
elif [[ $1 == *.jpg ]]; then
    xdg-open icat "$1"
else
    batcat "$@"
fi

